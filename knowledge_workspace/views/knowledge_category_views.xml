<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_knowledge_category_tree" model="ir.ui.view">
        <field name="name">knowledge.category.tree</field>
        <field name="model">knowledge.category</field>
        <field name="arch" type="xml">
            <tree string="Knowledge Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="page_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_knowledge_category_form" model="ir.ui.view">
        <field name="name">knowledge.category.form</field>
        <field name="model">knowledge.category</field>
        <field name="arch" type="xml">
            <form string="Knowledge Category">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="icon"/>
                            <field name="color"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="page_count" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Category description..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_knowledge_category_tree" model="ir.actions.act_window">
        <field name="name">Knowledge Categories</field>
        <field name="res_model">knowledge.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
