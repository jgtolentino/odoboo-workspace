<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_knowledge_page_tree" model="ir.ui.view">
        <field name="name">knowledge.page.tree</field>
        <field name="model">knowledge.page</field>
        <field name="arch" type="xml">
            <tree string="Knowledge Pages" decoration-muted="is_archived">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="author_id"/>
                <field name="modified_date"/>
                <field name="access_level"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_knowledge_page_form" model="ir.ui.view">
        <field name="name">knowledge.page.form</field>
        <field name="model">knowledge.page</field>
        <field name="arch" type="xml">
            <form string="Knowledge Page">
                <header>
                    <button name="action_archive" type="object" string="Archive" class="btn-warning" attrs="{'invisible': [('is_archived', '=', True)]}"/>
                    <button name="action_unarchive" type="object" string="Unarchive" class="btn-info" attrs="{'invisible': [('is_archived', '=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Page Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="access_level"/>
                        </group>
                        <group>
                            <field name="author_id" readonly="1"/>
                            <field name="created_date" readonly="1"/>
                            <field name="modified_date" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Brief description..."/>
                    <separator string="Content"/>
                    <field name="content" widget="html"/>
                    <separator string="Attachments"/>
                    <field name="attachment_ids" widget="many2many"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_knowledge_page_search" model="ir.ui.view">
        <field name="name">knowledge.page.search</field>
        <field name="model">knowledge.page</field>
        <field name="arch" type="xml">
            <search string="Search Pages">
                <field name="name" string="Title"/>
                <field name="content" string="Content"/>
                <field name="category_id"/>
                <field name="tag_ids"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('is_archived', '=', True)]"/>
                <filter name="not_archived" string="Active" domain="[('is_archived', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_author" string="Author" context="{'group_by': 'author_id'}"/>
                    <filter name="group_access" string="Access Level" context="{'group_by': 'access_level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_knowledge_page_tree" model="ir.actions.act_window">
        <field name="name">Knowledge Pages</field>
        <field name="res_model">knowledge.page</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_knowledge_page_search"/>
        <field name="context">{'search_default_not_archived': 1}</field>
    </record>
</odoo>
