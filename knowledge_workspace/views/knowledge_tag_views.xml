<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_knowledge_tag_tree" model="ir.ui.view">
        <field name="name">knowledge.tag.tree</field>
        <field name="model">knowledge.tag</field>
        <field name="arch" type="xml">
            <tree string="Knowledge Tags">
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_knowledge_tag_form" model="ir.ui.view">
        <field name="name">knowledge.tag.form</field>
        <field name="model">knowledge.tag</field>
        <field name="arch" type="xml">
            <form string="Knowledge Tag">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tag Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_knowledge_tag_tree" model="ir.actions.act_window">
        <field name="name">Knowledge Tags</field>
        <field name="res_model">knowledge.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
