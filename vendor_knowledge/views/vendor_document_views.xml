<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_vendor_document_tree" model="ir.ui.view">
        <field name="name">vendor.document.tree</field>
        <field name="model">vendor.document</field>
        <field name="arch" type="xml">
            <tree string="Vendor Documents" decoration-danger="is_expired">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="document_type"/>
                <field name="document_date"/>
                <field name="expiry_date"/>
                <field name="is_expired"/>
                <field name="days_until_expiry"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vendor_document_form" model="ir.ui.view">
        <field name="name">vendor.document.form</field>
        <field name="model">vendor.document</field>
        <field name="arch" type="xml">
            <form string="Vendor Document">
                <header>
                    <field name="is_expired" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="document_type"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="document_date"/>
                            <field name="expiry_date"/>
                            <field name="days_until_expiry" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Document description..."/>
                    <separator string="Attachments"/>
                    <field name="attachment_ids" widget="many2many"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_vendor_document_search" model="ir.ui.view">
        <field name="name">vendor.document.search</field>
        <field name="model">vendor.document</field>
        <field name="arch" type="xml">
            <search string="Search Vendor Documents">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="document_type"/>
                <separator/>
                <filter name="expired" string="Expired" domain="[('is_expired', '=', True)]"/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_vendor" string="Vendor" context="{'group_by': 'vendor_id'}"/>
                    <filter name="group_type" string="Document Type" context="{'group_by': 'document_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_vendor_document" model="ir.actions.act_window">
        <field name="name">Vendor Documents</field>
        <field name="res_model">vendor.document</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_vendor_document" name="Vendor Documents" parent="purchase.menu_purchase_config" action="action_vendor_document" sequence="20"/>
</odoo>
