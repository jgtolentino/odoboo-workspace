<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_expense_category_tree" model="ir.ui.view">
        <field name="name">expense.category.tree</field>
        <field name="model">expense.category</field>
        <field name="arch" type="xml">
            <tree string="Expense Categories">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="expense_count"/>
                <field name="total_expenses" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_expense_category_form" model="ir.ui.view">
        <field name="name">expense.category.form</field>
        <field name="model">expense.category</field>
        <field name="arch" type="xml">
            <form string="Expense Category">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="expense_count" readonly="1"/>
                            <field name="total_expenses" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Category description..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_expense_category" model="ir.actions.act_window">
        <field name="name">Expense Categories</field>
        <field name="res_model">expense.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_expense_category" name="Expense Categories" parent="hr_expense.menu_hr_expense_root" action="action_expense_category" sequence="20"/>
</odoo>
