<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OCR Review Queue Tree View -->
    <record id="hr_expense_ocr_view_tree" model="ir.ui.view">
        <field name="name">hr.expense.ocr.tree</field>
        <field name="model">hr.expense.ocr</field>
        <field name="arch" type="xml">
            <tree string="OCR Processing Queue"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'failed'"
                  decoration-warning="needs_review">
                <field name="name"/>
                <field name="create_date"/>
                <field name="merchant_name"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_code" column_invisible="1"/>
                <field name="confidence" widget="percentage"
                       decoration-success="confidence &gt;= 0.85"
                       decoration-warning="confidence &lt; 0.85 and confidence &gt;= 0.60"
                       decoration-danger="confidence &lt; 0.60"/>
                <field name="needs_review" widget="boolean_toggle"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'processing'"
                       decoration-warning="state == 'review'"
                       decoration-danger="state == 'failed'"/>
                <field name="expense_id"/>
            </tree>
        </field>
    </record>

    <!-- OCR Form View -->
    <record id="hr_expense_ocr_view_form" model="ir.ui.view">
        <field name="name">hr.expense.ocr.form</field>
        <field name="model">hr.expense.ocr</field>
        <field name="arch" type="xml">
            <form string="OCR Processing Result">
                <header>
                    <button name="process_image"
                            string="Re-process OCR"
                            type="object"
                            class="oe_highlight"
                            invisible="state in ('processing', 'done')"/>
                    <button name="action_approve_and_create_expense"
                            string="Approve &amp; Create Expense"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'review' or expense_id"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,processing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_approve_and_create_expense"
                                icon="fa-file-text-o"
                                invisible="not expense_id">
                            <field name="expense_id" widget="statinfo" string="Expense"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group name="ocr_result">
                            <field name="confidence" widget="percentage"/>
                            <field name="needs_review" widget="boolean_toggle"/>
                            <field name="ocr_success" widget="boolean_toggle"/>
                        </group>
                        <group name="extracted_fields">
                            <field name="merchant_name"/>
                            <field name="total_amount"/>
                            <field name="currency_code"/>
                            <field name="receipt_date"/>
                            <field name="tax_amount"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Receipt Image" name="image">
                            <field name="image_data" widget="image" filename="image_filename"/>
                            <field name="image_filename" invisible="1"/>
                        </page>
                        <page string="Raw OCR Text" name="raw_text">
                            <field name="raw_text" widget="text"/>
                        </page>
                        <page string="Extracted Data (JSON)" name="json">
                            <field name="extracted_data" widget="text"/>
                        </page>
                        <page string="Error Details" name="error" invisible="state != 'failed'">
                            <field name="error_message" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- OCR Search View -->
    <record id="hr_expense_ocr_view_search" model="ir.ui.view">
        <field name="name">hr.expense.ocr.search</field>
        <field name="model">hr.expense.ocr</field>
        <field name="arch" type="xml">
            <search string="OCR Processing">
                <field name="name"/>
                <field name="merchant_name"/>
                <field name="expense_id"/>
                <filter string="Needs Review" name="needs_review"
                        domain="[('needs_review', '=', True)]"/>
                <filter string="High Confidence" name="high_confidence"
                        domain="[('confidence', '&gt;=', 0.85)]"/>
                <filter string="Low Confidence" name="low_confidence"
                        domain="[('confidence', '&lt;', 0.85)]"/>
                <separator/>
                <filter string="Processing" name="processing"
                        domain="[('state', '=', 'processing')]"/>
                <filter string="Done" name="done"
                        domain="[('state', '=', 'done')]"/>
                <filter string="Failed" name="failed"
                        domain="[('state', '=', 'failed')]"/>
                <filter string="Review" name="review"
                        domain="[('state', '=', 'review')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Merchant" name="group_merchant" context="{'group_by': 'merchant_name'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for OCR Review Queue -->
    <record id="action_hr_expense_ocr_review" model="ir.actions.act_window">
        <field name="name">OCR Review Queue</field>
        <field name="res_model">hr.expense.ocr</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_needs_review': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No OCR processing results found
            </p>
            <p>
                OCR processing results will appear here when receipts are uploaded.
                Items with low confidence (&lt;85%) require manual review.
            </p>
        </field>
    </record>

    <!-- Action for All OCR Results -->
    <record id="action_hr_expense_ocr_all" model="ir.actions.act_window">
        <field name="name">OCR Processing History</field>
        <field name="res_model">hr.expense.ocr</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No OCR processing history
            </p>
        </field>
    </record>
</odoo>
