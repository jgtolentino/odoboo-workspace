<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit hr.expense form view to add OCR button -->
    <record id="hr_expense_view_form_ocr" model="ir.ui.view">
        <field name="name">hr.expense.form.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <!-- Add OCR button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_process_with_ocr"
                        string="Process with OCR"
                        type="object"
                        class="oe_highlight"
                        icon="fa-camera"
                        invisible="ocr_processed"/>
            </xpath>

            <!-- Add OCR fields in form -->
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="ocr_processed" invisible="1"/>
                <field name="ocr_confidence" readonly="1"
                       invisible="not ocr_processed"
                       widget="percentage"/>
                <field name="ocr_record_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit hr.expense tree view to show OCR status -->
    <record id="hr_expense_view_tree_ocr" model="ir.ui.view">
        <field name="name">hr.expense.tree.ocr</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='total_amount']" position="after">
                <field name="ocr_processed" string="OCR" widget="boolean_toggle"/>
                <field name="ocr_confidence" string="Confidence"
                       optional="hide"
                       widget="percentage"/>
            </xpath>
        </field>
    </record>
</odoo>
