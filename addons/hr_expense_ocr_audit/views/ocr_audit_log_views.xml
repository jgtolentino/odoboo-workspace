<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OCR Audit Log Tree View -->
    <record id="view_ocr_audit_log_tree" model="ir.ui.view">
        <field name="name">hr.expense.ocr.audit.log.tree</field>
        <field name="model">hr.expense.ocr.audit.log</field>
        <field name="arch" type="xml">
            <tree string="OCR Audit Logs" default_order="create_date desc">
                <field name="create_date"/>
                <field name="expense_id"/>
                <field name="employee_id"/>
                <field name="action"/>
                <field name="ocr_confidence" widget="progressbar"/>
                <field name="visual_similarity" widget="progressbar" optional="hide"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- OCR Audit Log Form View -->
    <record id="view_ocr_audit_log_form" model="ir.ui.view">
        <field name="name">hr.expense.ocr.audit.log.form</field>
        <field name="model">hr.expense.ocr.audit.log</field>
        <field name="arch" type="xml">
            <form string="OCR Audit Log" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="expense_id"/>
                            <field name="employee_id"/>
                            <field name="action"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="ocr_confidence" widget="progressbar"/>
                            <field name="visual_similarity" widget="progressbar"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group string="Result Data">
                        <field name="result_data" widget="ace" options="{'mode': 'json'}" colspan="2"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- OCR Audit Log Action -->
    <record id="action_ocr_audit_log" model="ir.actions.act_window">
        <field name="name">OCR Audit Logs</field>
        <field name="res_model">hr.expense.ocr.audit.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ocr_audit_log"
              name="OCR Audit Logs"
              parent="hr_expense.menu_hr_expense_report"
              action="action_ocr_audit_log"
              sequence="50"/>

</odoo>
