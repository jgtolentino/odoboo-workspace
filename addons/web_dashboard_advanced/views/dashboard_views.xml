<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Form View -->
    <record id="view_dashboard_form" model="ir.ui.view">
        <field name="name">dashboard.dashboard.form</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="is_shareable"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="is_default"/>
                            <field name="share_token" readonly="1" invisible="not is_shareable"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Widgets">
                            <field name="widget_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="widget_type"/>
                                    <field name="data_source_type"/>
                                    <field name="sequence" widget="handle"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Layout">
                            <group>
                                <field name="layout" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Dashboard Tree View -->
    <record id="view_dashboard_tree" model="ir.ui.view">
        <field name="name">dashboard.dashboard.tree</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <tree string="Dashboards">
                <field name="name"/>
                <field name="user_id"/>
                <field name="is_default"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Dashboard Widget Form View -->
    <record id="view_dashboard_widget_form" model="ir.ui.view">
        <field name="name">dashboard.widget.form</field>
        <field name="model">dashboard.widget</field>
        <field name="arch" type="xml">
            <form string="Dashboard Widget">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dashboard_id"/>
                            <field name="widget_type"/>
                        </group>
                        <group>
                            <field name="data_source_type"/>
                            <field name="sequence"/>
                            <field name="cache_enabled"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data Source" name="data_source">
                            <group invisible="data_source_type != 'model'">
                                <field name="model_id"/>
                                <field name="domain"/>
                                <field name="field_ids" widget="many2many_tags"/>
                            </group>
                            <group invisible="data_source_type != 'sql'">
                                <field name="sql_query" widget="ace" options="{'mode': 'sql'}"/>
                            </group>
                            <group invisible="data_source_type != 'manual'">
                                <field name="manual_data" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Configuration" name="config">
                            <group>
                                <field name="config" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Cache" name="cache" invisible="not cache_enabled">
                            <group>
                                <field name="cache_duration"/>
                                <field name="last_computed" readonly="1"/>
                                <field name="cached_data" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboards</field>
        <field name="res_model">dashboard.dashboard</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dashboard!
            </p>
            <p>
                Build interactive dashboards with drag-and-drop widgets.
            </p>
        </field>
    </record>

    <!-- Dashboard Widget Action -->
    <record id="action_dashboard_widget" model="ir.actions.act_window">
        <field name="name">Dashboard Widgets</field>
        <field name="res_model">dashboard.widget</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
