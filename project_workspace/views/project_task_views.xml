<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Task Form -->
    <record id="view_project_task_form_extended" model="ir.ui.view">
        <field name="name">project.task.form.extended</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <separator string="Task Details"/>
                <group>
                    <group>
                        <field name="priority_level"/>
                        <field name="parent_task_id"/>
                        <field name="knowledge_page_id"/>
                    </group>
                    <group>
                        <field name="estimated_hours"/>
                        <field name="actual_hours"/>
                        <field name="is_overdue" readonly="1"/>
                    </group>
                </group>
                <separator string="Subtasks"/>
                <group>
                    <field name="subtask_count" readonly="1"/>
                    <field name="completed_subtasks" readonly="1"/>
                    <field name="progress_percentage" readonly="1" widget="progressbar"/>
                </group>
                <field name="child_task_ids" mode="tree">
                    <tree>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="date_deadline"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_project_task_kanban" model="ir.ui.view">
        <field name="name">project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" quick_create="top">
                <field name="id"/>
                <field name="name"/>
                <field name="state"/>
                <field name="priority_level"/>
                <field name="assigned_user_id"/>
                <field name="date_deadline"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_title">
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                </div>
                                <div class="oe_kanban_bottom">
                                    <div class="oe_kanban_footer_left">
                                        <field name="priority_level" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_footer_right">
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.assigned_user_id.raw_value)" t-att-title="record.assigned_user_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Extend Task Tree -->
    <record id="view_project_task_tree_extended" model="ir.ui.view">
        <field name="name">project.task.tree.extended</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="priority_level"/>
                <field name="progress_percentage"/>
                <field name="is_overdue"/>
            </xpath>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_project_task_search_extended" model="ir.ui.view">
        <field name="name">project.task.search.extended</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter name="overdue" string="Overdue" domain="[('is_overdue', '=', True)]"/>
                <filter name="high_priority" string="High Priority" domain="[('priority_level', 'in', ['2', '3'])]"/>
                <group expand="0" string="Group By">
                    <filter name="group_priority" string="Priority" context="{'group_by': 'priority_level'}"/>
                    <filter name="group_progress" string="Progress" context="{'group_by': 'progress_percentage'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
