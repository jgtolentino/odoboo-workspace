<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_project_wiki_tree" model="ir.ui.view">
        <field name="name">project.wiki.tree</field>
        <field name="model">project.wiki</field>
        <field name="arch" type="xml">
            <tree string="Project Wiki Pages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="author_id"/>
                <field name="modified_date"/>
                <field name="is_published"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_project_wiki_form" model="ir.ui.view">
        <field name="name">project.wiki.form</field>
        <field name="model">project.wiki</field>
        <field name="arch" type="xml">
            <form string="Project Wiki Page">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Page Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="parent_wiki_id"/>
                            <field name="is_published"/>
                        </group>
                        <group>
                            <field name="author_id" readonly="1"/>
                            <field name="created_date" readonly="1"/>
                            <field name="modified_date" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Brief description..."/>
                    <separator string="Content"/>
                    <field name="content" widget="html"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_wiki_tree" model="ir.actions.act_window">
        <field name="name">Project Wiki</field>
        <field name="res_model">project.wiki</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
