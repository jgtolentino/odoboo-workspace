<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_workspace_activity_tree" model="ir.ui.view">
        <field name="name">workspace.activity.tree</field>
        <field name="model">workspace.activity</field>
        <field name="arch" type="xml">
            <tree string="Workspace Activity">
                <field name="activity_date"/>
                <field name="activity_type"/>
                <field name="user_id"/>
                <field name="description"/>
                <field name="is_important"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_workspace_activity_form" model="ir.ui.view">
        <field name="name">workspace.activity.form</field>
        <field name="model">workspace.activity</field>
        <field name="arch" type="xml">
            <form string="Workspace Activity">
                <sheet>
                    <group>
                        <group>
                            <field name="activity_date" readonly="1"/>
                            <field name="activity_type" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="is_important"/>
                            <field name="related_model" readonly="1"/>
                            <field name="related_id" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" readonly="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_workspace_activity_search" model="ir.ui.view">
        <field name="name">workspace.activity.search</field>
        <field name="model">workspace.activity</field>
        <field name="arch" type="xml">
            <search string="Search Activity">
                <field name="description"/>
                <field name="user_id"/>
                <field name="activity_type"/>
                <separator/>
                <filter name="important" string="Important" domain="[('is_important', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Activity Type" context="{'group_by': 'activity_type'}"/>
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'activity_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_workspace_activity" model="ir.actions.act_window">
        <field name="name">Activity Log</field>
        <field name="res_model">workspace.activity</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
